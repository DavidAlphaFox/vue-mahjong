{sys, [
       {lib_dirs, ["../../deps","../../application"]},
       {erts, [{mod_cond, derived}, {app_file, strip}]},
       {app_file, strip},
       {rel, "mahjong", "1",
        [
         kernel,
         stdlib,
         sasl,
         inets,
         crypto,
         public_key,
         ssl,
         compiler,
         mnesia,
         tools,
         observer,
         cowboy,
         cowlib,
         protobuffs,
         ranch,
         stdlib2,
         meck,
         xmerl,
         rfc4627_jsonrpc,
         db,
         mahjong,
         gateway,
         protob,
         util
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "mahjong"},
       {profile, embedded},
       {incl_cond, exclude},
       {excl_archive_filters, [".*"]}, %% Do not archive built libs
       {excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)", "^erts.*/(doc|info|include|lib|man|src)"]},
       {excl_app_filters, ["\.gitignore", "\.svn", ".+\.hrl"]},
       {app, sasl,   [{incl_cond, include}]},
       {app, inets, [{incl_cond, include}]},
       {app, stdlib, [{incl_cond, include}]},
       {app, kernel, [{incl_cond, include}]},
       {app, crypto, [{incl_cond, include}]},
       {app, asn1, [{incl_cond, include}]},
       {app, public_key, [{incl_cond, include}]},
       {app, compiler, [{incl_cond, include}]},
       {app, mnesia, [{incl_cond, include}]},
       {app, ssl, [{incl_cond, include}]},
       {app, tools, [{incl_cond, include}]},
       {app, observer, [{incl_cond, include}]},
       {app, cowboy, [{incl_cond, include}]},
       {app, xmerl, [{incl_cond, include}]},
       {app, cowlib, [{incl_cond, include}]},
       {app, protobuffs, [{incl_cond, include}]},
       {app, ranch, [{incl_cond, include}]},
       {app, stdlib2, [{incl_cond, include}]},
       {app, meck, [{incl_cond, include}]},
       {app, rfc4627_jsonrpc, [{incl_cond, include}]},
       {app, db, [{incl_cond, include}]},
       {app, mahjong, [{incl_cond, include}]},
       {app, gateway, [{incl_cond, include}]},
       {app, protob, [{incl_cond, include}]},
       {app, util, [{incl_cond, include}]}
      ]}.

{target_dir, "mahjong"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "files/mahjong", "bin/mahjong"},
           {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
           {copy, "files/mahjong.cmd", "bin/mahjong.cmd"},
           {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
           {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"}
          ]}.

